{
  "name": "Change Pinia state",
  "description": "Run commands to control current state Pinia App",
  "version": "0.0.1",
  "author": "a.bilyk",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icon/16.png",
      "32": "icon/32.png"
    }
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": "icon/16.png"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"]
}
