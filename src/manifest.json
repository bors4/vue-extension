{
  "name": "Change Pinia state",
  "description": "Run commands to control current state Pinia App",
  "version": "1.2.0",
  "author": "a.bilyk",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "128": "icon/logo.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icon/logo.png",
      "32": "icon/logo.png"
    }
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": "icon/logo.png"
  },
  "permissions": ["scripting", "tabs", "clipboardRead", "clipboardWrite"],
  "host_permissions": ["<all_urls>"]
}
